<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/stripes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dori.failsafeforreal.ApplicationSettings"
    android:id="@+id/relativelayoutid">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Update Notifications"
        android:id="@+id/switch1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:checked="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Nearby Alerts Notifications"
        android:id="@+id/switch2"
        android:checked="false"
        android:layout_below="@+id/switch1"
        android:layout_alignRight="@+id/switch1"
        android:layout_alignEnd="@+id/switch1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Location Services"
        android:id="@+id/switch3"
        android:checked="true"
        android:layout_below="@+id/switch2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp"
        android:layout_alignRight="@+id/switch2"
        android:layout_alignEnd="@+id/switch2" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Allow Cellular Data Use"
        android:id="@+id/switch4"
        android:checked="true"
        android:layout_below="@+id/switch3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/switch3"
        android:layout_alignEnd="@+id/switch3" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Allow user collection data"
        android:id="@+id/switch5"
        android:checked="false"
        android:layout_below="@+id/switch4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:layout_alignRight="@+id/switch4"
        android:layout_alignEnd="@+id/switch4" />

    <Button
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:text="Battery Saver Off"
        android:id="@+id/batterySaverButton"
        android:layout_below="@+id/switch5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />
</RelativeLayout>
